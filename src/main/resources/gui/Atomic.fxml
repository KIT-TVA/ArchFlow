<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<StackPane fx:id="container" xmlns:fx="http://javafx.com/fxml"
>
    <Rectangle
            fx:id="rectangle"
            viewOrder="5"
            fill="snow"
            stroke="crimson"
            onMouseClicked="#editSpec"
    >
    </Rectangle>
    <BorderPane style="-fx-padding: 12 12 0 12">
        <top>
            <BorderPane>
                <center>
                    <Label fx:id="name" style="-fx-alignment: top-center" />
                </center>
                <right>
                    <FontIcon iconSize="20" iconLiteral="ci-center-square" />
                </right>
            </BorderPane>
        </top>
    </BorderPane>
    <cursor>
        <Cursor fx:constant="MOVE" />
    </cursor>
</StackPane>
